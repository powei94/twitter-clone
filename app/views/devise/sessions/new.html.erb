<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">
        <h2 class="title is-2">Inicio de Sesión</h2>


          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

            <div class="field">
              <div class="control">
                <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { class: "input" },
                          wrapper: false,
                          label: "Correo electrónico",
                          label_html: { class:"label" }
                          %>
              </div>
            </div>

            <div class="field">
              <div class="control">
                <%= f.input :password,
                            required: false,
                            input_html: { class: "input" },
                            wrapper: false,
                            label: "Correo electrónico",
                            label_html: { class:"label" }
                            %>
                </div>
            </div>
              
            <div class="field">
              <div class="control">
                <%= f.input   :remember_me, 
                              wrapper: false,
                              input_html: { class: "checkbox" },
                              label: "Recúerdame",
                              label_html: { class:"label"},
                              as: :boolean if devise_mapping.rememberable?
                              %>
              </div>
            </div>
              
            <div class="field">
              <div class="control">
                <div class="form-actions">
                  <%= f.button :submit, "Iniciar sesión", class: "button is-info" %>
                </div>
              </div>
            </div>
          <% end %>

          <br/>
          <%= render "devise/shared/links" %>  
      </div>
    </div>
  </div>
</div>
